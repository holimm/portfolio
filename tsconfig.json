{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "target": "ES6",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/config/*": ["./src/config/*"],
      "@/libs/*": ["./src/libs/*"],
      "@/components/*": ["./src/components/*"],
      "@/features/*": ["./features/*"],
      "@/pages/*": ["./pages/*"],
      "@/public/*": ["./public/*"],
      "@/themes/*": ["./themes/*"],
      "@/types/*": ["./src/types/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/services/*": ["./src/services/*"],
      "@/network/*": ["./src/network/*"],
      "@/helpers/*": ["./src/helpers/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/middlewares/*": ["./src/middlewares/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/assets/*": ["./src/assets/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
